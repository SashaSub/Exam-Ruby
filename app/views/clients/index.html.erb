<h1>Clientes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ID Cliente</th>
      <th scope="col">Nombre</th>
      <th scope="col">Correo</th>
      <th scope="col">Tipo</th>
      <th scope="col">Ordenes</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |cliente| %>

    <% if cliente.orders.any? %>
      <tr>
        <td><%= cliente.id %></td>
        <td><%= cliente.nombre %></td>
        <td><%= cliente.email %></td>
        <td><%= cliente.type.nombre %></td>
        <td>           
            <% cliente.orders.each do |orden| %>
              <%= orden.id %> <%= link_to "Mostrar el orden", "/orders/#{orden.id}", class:"btn btn-secondary btn-sm" %><br>
            <% end %>
        </td>
        <td><%= link_to "Mostrar el cliente", cliente, class:"btn btn-secondary btn-sm" %></td>
      </tr>
  <% end %>
  <% end %>
  </tbody>
</table> 



<div>
  <%= raw pagy_bootstrap_nav(@pagy)%>
</div>

<%= link_to "New client", new_client_path %>
